public string countAndSay(integer N) {
     if (N == 1) {
            return '1';
        }
        String prev = countAndSay(N - 1);
        String result = '';
        Integer count = 1;

        // Iterate through the characters of the previous sequence
        for (Integer i = 1; i < prev.length(); i++) {
            if (prev.charAt(i) == prev.charAt(i - 1)) {
                count++;
            } else {
                result += String.valueOf(count) + prev.charAt(i - 1);
                count = 1;
            }
        }

        // Append the count of the last character
        result += String.valueOf(count) + prev.charAt(prev.length() - 1);
        
        return result;
}
