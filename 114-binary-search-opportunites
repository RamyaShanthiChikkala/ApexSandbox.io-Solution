public static Integer search(List<Opportunity> opportunities, Integer target){
    
    Integer left = 0 ;
    Integer right = opportunities.size();
    Integer i = right/2 ;

    while(left < right)
    {
        if(opportunities[i].Amount < target)
        {
            left = i+1;
        }
        else if(opportunities[i].Amount < target)
        {
            right = i+1;
        }
        else
        return i;
    }

    return -1;

}