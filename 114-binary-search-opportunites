public static Integer search(List<Opportunity> opportunities, Integer target){
    
    Integer left = 0 ;
    Integer right = opportunities.size();
    Integer i = right/2 ;

    while(left < right)
    {
        if(opportunities[i] < target)
        {
            left = i+1;
            left++;
            right--;
        }
        else if(opportunities[i] < target)
        {
            right = i;
            left++;
            right--;
        }
        else
        return i;

    }

}