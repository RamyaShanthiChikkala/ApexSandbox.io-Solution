public boolean isSorted(List<Integer> numbers) {
 
 if(numbers.size() < 3)
 return true;
 
 if(numbers[0] > numbers[1])
 {
     for(Integer i = 0 ; i < numbers.size()-1; i++)
     {
         if(numbers[i+1] < numbers[i])
         return false;
     }
 }
 else if((numbers[0] < numbers[1]))
 {
     for(Integer i = 0 ; i < numbers.size()-1; i++)
     {
         if(numbers[i+1] > numbers[i])
         return false;
     }
 }
 return true;

}